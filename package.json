{
  "name": "@activade/open-workflows",
  "version": "1.0.2",
  "description": "AI-powered GitHub automation workflows via composite actions",
  "keywords": [
    "github",
    "github-actions",
    "ai",
    "automation",
    "code-review",
    "pr-review",
    "issue-labeling",
    "opencode"
  ],
  "author": "activadee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activadee/open-workflows.git"
  },
  "type": "module",
  "bin": {
    "open-workflows": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "actions",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && bun build src/cli/index.ts --outdir dist/cli --target bun --format esm --minify",
    "dev": "bun run build --watch",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepublishOnly": "bun run clean && bun run build && bun run typecheck"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "bun-types": "latest",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
